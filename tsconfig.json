{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.ts",
    "src/**/*.vue",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "ignoreDeprecations": ["importsNotUsedAsValues", "5.0"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
